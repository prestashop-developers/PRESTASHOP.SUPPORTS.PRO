---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const pageTitle = "PrestaShop Design & UX Services | prestashop.supports.pro";
const pageDescription = "Professional PrestaShop design and UX services. Responsive design, UX optimization, mobile-first approach, and brand integration for better conversions.";
const canonicalURL = "https://prestashop.supports.pro/services/design-ux";
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalURL}>
	<Fragment slot="head">
		<!-- Open Graph -->
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:type" content="service" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content="https://prestashop.supports.pro/images/design-ux-og.jpg" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={pageDescription} />
		
		<!-- Additional SEO -->
		<meta name="keywords" content="PrestaShop design, UX optimization, responsive design, mobile-first, brand integration, e-commerce design, conversion optimization" />
		<meta name="author" content="prestashop.supports.pro" />
		<meta name="robots" content="index, follow" />
		
		<!-- Schema Markup -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Service",
			"name": "PrestaShop Design & UX",
			"description": "Professional design and user experience optimization services for PrestaShop stores",
			"provider": {
				"@type": "Organization",
				"name": "prestashop.supports.pro",
				"url": "https://prestashop.supports.pro"
			},
			"serviceType": "Web Design",
			"areaServed": "Worldwide"
		}
		</script>
	</Fragment>
	
	<Header />
	<main>
		<section class="service-hero">
			<div class="container">
				<div class="breadcrumb">
					<a href="/">Home</a> / <a href="/#services">Services</a> / <span>Design & UX</span>
				</div>
				<h1>PrestaShop Design & UX</h1>
				<p class="hero-subtitle">Create stunning, conversion-optimized PrestaShop stores that engage customers and drive sales</p>
			</div>
		</section>

		<section class="service-content section-padding">
			<div class="container">
				<div class="content-grid">
					<div class="main-content">
						<div class="service-overview">
