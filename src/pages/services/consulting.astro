			grid-template-columns: 1fr;
		}

		.packages-grid {
			grid-template-columns: 1fr;
		}

		.package-card.featured {
			transform: none;
		}

		.process-flow {
			flex-direction: column;
		}

		.process-arrow {
			transform: rotate(90deg);
		}

		.service-hero h1 {
			font-size: 2rem;
		}
	}
