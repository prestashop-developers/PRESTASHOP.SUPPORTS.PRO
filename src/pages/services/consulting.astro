	}

	.contact-cta {
		background: linear-gradient(135deg, #f8fafc, #e2e8f0);
		padding: 4rem 0;
		text-align: center;
	}

	.contact-cta h2 {
		font-size: 2rem;
		color: #0f1f3c;
